{
  "name": "AminoUser",
  "plural": "AminoUsers",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "forceId": false,
  "properties": {
    "fullname": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "*",
      "model": "*"
    }
  ],
  "methods": {
    "aminoLogin": {
      "accepts": [
        {
          "arg": "username",
          "type": "string",
          "required": true,
          "description": "Amino user name"
        },
        {
          "arg": "password",
          "type": "string",
          "required": true,
          "description": "Amino password"
        }
      ],
      "returns": [
        {
          "arg": "jwt",
          "type": "string",
          "root": true,
          "description": "JSON web auth token"
        }
      ],
      "description": "Get access token",
      "http": [
        {
          "path": "/login",
          "verb": "post"
        }
      ]
    }
  }
}
